<h2>Edit a Dojo </h2>
<% if flash[:notice] %>
  <% flash[:errors].each do |error| %>
    <p> <%= error %>  </p>
  <% end %>
<% end %>
<form action='/dojos/<%= @dojo.id %>' method='post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input type='hidden' name ='_method' value='put'>
    <ul style="list-style-type:none">
      <li>Branch: <input type='text' name=dojo[branch] value="<%= @dojo.branch %>">  </li>
      <li>Address: <input type='text' name=dojo[street] value="<%= @dojo.street %>"> </li>
      <li>City:  <input type='text' name=dojo[city] value="<%= @dojo.city %>"></li>
      <li>State:  <input type='text' name=dojo[state] value="<%= @dojo.state %>"></li>
      <input type='submit' value='Update'>
    </ul>
</form>
<a href='/'>Home |</a><a href='/show/<%= @dojo.id %>'>Show</a>
