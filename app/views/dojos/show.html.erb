
<h1>Dojo Location: <%= @dojo.branch %></h1>
<a href='/edit/<%= @dojo.id %>'> Edit</a><a href='/destroy/<%= @dojo.id %>' data-method='delete'>| Destroy</a>



<h3>Address: <%= @dojo.street %></h3>
<p>City: <%= @dojo.city %></p>
<p>State: <%= @dojo.state %></p>
<table>
  <h1>Student Roster</h1>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th> Actions</th>
  </tr>
    <% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.email %></td>

    <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show</a>
        <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit'>| Edit</a>
        <a href='/students/<%= student.id %>/destroy' data-method='delete'>| Destroy</a>
    </td>
  </tr>
  <% end %>
</table>
