<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>


<form action='/students/<%= @student.id %>' method='post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input type='hidden' name ='_method' value='put'>
    <ul style="list-style-type:none">
      <li>First Name: <input type='text' name='student[first_name]' value="<%= @student.first_name %>">  </li>
      <li>Last Name: <input type='text' name='student[last_name]' value="<%= @student.last_name %>"> </li>
      <li>Email:  <input type='text' name='student[email]' value="<%= @student.email %>"></li>
      <li>Dojo:
      <select name="student[dojo_id]">
        <% @dojos.each do |dojo| %>
          <% if dojo.id == @student.dojo_id %>
      <option type='text' selected value="<%= dojo.id %>"><%= dojo.branch %>>
          <% else %>
      <option type='text' value="<%= dojo.id %>"><%= dojo.branch %>></li>
          <% end %>
        <% end %>
      <li><input type='submit' value='Update' /></li>
    </ul>
    </ul>
</form>
<a href='/'>Home |</a><a href='/show/<%= @student.dojo_id %>'>Show</a>
